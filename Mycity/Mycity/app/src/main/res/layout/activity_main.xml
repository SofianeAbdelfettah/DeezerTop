<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="event.mycity.MainActivity">

<Button
    android:id="@+id/Button1"
    android:layout_width="500dp"
    android:layout_height="100dp"
    android:text="@string/Buton1"
    android:onClick="playlistnext"
    android:textColor="#ffffff"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/button3"
    android:background="@drawable/playlist"
    android:textSize="40dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="@string/Buton2"
        android:onClick="artistesnext"
        android:textColor="#ffffff"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/artistes"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:text="@string/Buton3"
        android:onClick="albumsnext"
        android:textColor="#fafdff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/albums"
        android:textSize="40dp" />


</RelativeLayout>
